@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Find Your Dream Tech Job</h1>
<div class="search-box">
<p>Search for exciting opportunities in the tech industry.</p>
    <form action="#">
        <div class="job-search-cls">
            <i class="fas fa-search"></i>
            <input type="text" id="job-title" name="job-title" placeholder="e.g. Software Engineer">
            <div id="job-title-suggestions" class="autocomplete-suggestions"></div>
        </div>
        <div class="job-search-cls">
            <i class="fas fa-map-marker-alt"></i>
            <input type="text" id="location" name="location" placeholder="e.g. New York, NY">
            <div id="location-suggestions" class="autocomplete-suggestions"></div>
        </div>
        <button type="submit" class="job-sbm-btn">Search Jobs</button>
    </form>
</div>